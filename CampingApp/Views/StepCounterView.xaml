<?xml version="1.0" encoding="utf-8" ?>
<VerticalStackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     x:Class="CampingApp.Views.StepCounterView"
                     Loaded="VerticalStackLayout_Loaded"
                     >

    <Image Source="pedometer.png"
           HorizontalOptions="Center"
           WidthRequest="100"
           HeightRequest="100"
           Margin="0, 0, 0, 10"/>

    <Label
        Text="Steps"
        HorizontalOptions="Center"
        class="SubContent"/>

    <Label x:Name="StepLabel"
           Text="1,086 steps"
           HorizontalOptions="Center"
           class="Title" />

    <Button Text="Reset" Clicked="Button_Clicked" />
</VerticalStackLayout>